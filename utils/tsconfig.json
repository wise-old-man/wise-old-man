{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2017"],
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true
  },
  "exclude": ["node_modules", "dist", "tests"]
}
