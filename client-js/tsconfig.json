{
  "compilerOptions": {
    "rootDir": "../../",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom", "es2019", "es2022"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es2015",
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist"]
}
