{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es2016",
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules", "dist"]
}
