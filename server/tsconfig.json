{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "importHelpers": true,
    "baseUrl": ".",
    "lib": ["es6", "es2017", "esnext"],
    "types": ["jest"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
